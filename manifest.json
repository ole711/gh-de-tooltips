{
  "manifest_version": 3,
  "name": "GitHub Deutsch Tooltips",
  "version": "0.2.1",
  "description": "Deutsche Tooltips – erkennt jetzt auch Präfixe vor Doppelpunkten (z. B. „Watch: …“).",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mapping.json"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}